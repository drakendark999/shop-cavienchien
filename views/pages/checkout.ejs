        <!-- Contact Javascript File -->
        <script src="mail/jqBootstrapValidation.min.js"></script>
        <script src="mail/contact.js"></script>

        <!-- Template Javascript -->
        <script src="js/main.js"></script>
        <script>
            // Show cart
            function showCartItem(arr) {
                arr.forEach((item, index) => {
                    item_add = `
            <div class="d-flex justify-content-between">
                <p>${item.name}</p>
                <p class="pay__price-item">${(item.price * item.quantity).toLocaleString("it-IT", { style: "currency", currency: "VND" })}</p>
            </div>
        
        `;
                    document.querySelector(".show-pay-cart").innerHTML += item_add;
                });
            }
            var cart_arr = JSON.parse(localStorage.getItem("cart")) || "";
            var item_add = "";
            if (cart_arr) {
                showCartItem(cart_arr);
            }

            // total price
            var priceElements = Array.from(document.querySelectorAll(".pay__price-item"));

            const arr_total = priceElements.map((item) => Number(item.innerText.slice(0, -3).replaceAll(".", "")));

            let total = 0;
            for (let item of arr_total) {
                total += item;
            }

            document.querySelector(".pay__total").innerText = total.toLocaleString("it-IT", { style: "currency", currency: "VND" });

            let ship_fee = Number(document.querySelector(".fee-ship").innerText.slice(0, -3).replaceAll(".", ""));

            document.querySelector(".total-and-ship").innerText = (total + ship_fee).toLocaleString("it-IT", { style: "currency", currency: "VND" });

            // click button to order
            // const api = "http://localhost:3333";
        const api='https://shop-caviengiare.onrender.com'


            document.querySelector(".btn-order").addEventListener("click", (e) => {
                e.preventDefault();

                let first_name = document.querySelector("#first-name").value.trim();
                let last_name = document.querySelector("#last-name").value.trim();
                let email = document.querySelector("#email").value.trim();
                let phone = document.querySelector("#phone").value.trim();
                let address = document.querySelector("#address").value.trim();

                if ((first_name, last_name == "")) {
                    alert("Chưa nhập họ tên");
                    return;
                }
                if (address == "") {
                    alert("Chưa nhập địa chỉ");
                    return;
                }
                if (email == "") {
                    alert("Chưa nhập email");
                    return;
                }
                if (phone == "") {
                    alert("Chưa nhập số điện thoại");
                    return;
                }

                let orderInfor = {
                    customer_name: `${first_name} ${last_name}`,
                    customer_address: address,
                    customer_email: email,
                    customer_phone: phone,
                    create_date: new Date().toISOString().slice(0, 10),
                    status: "Chờ xác nhận",
                };

                let url = `${api}/checkout/api/orders`;
                options = {
                    method: "POST",
                    body: JSON.stringify(orderInfor),
                    headers: { "Content-Type": "application/json" },
                };
                fetch(url, options)
                    .then((res) => res.json())
                    .then((data) => {
                        url = `${api}/checkout/api/ordersmax`;
                        fetch(url)
                            .then((res) => res.json())
                            .then((data) => {
                                let order_id = data[0].id;

                                saveDetailOrder(order_id);
                                localStorage.removeItem("cart");
                                document.getElementById("id01").style.display = "block";
                            });
                    });
            });

            // save order details
            const saveDetailOrder = (order_id) => {
                let cart_to_order = JSON.parse(localStorage.getItem("cart"));
                cart_to_order.forEach((item) => {
                    let objItem = {
                        order_id: order_id,
                        product_id: item.id,
                        quantity: item.quantity,
                        unti_price: item.price,
                        total:item.price*item.quantity
                    };
                    console.log(objItem);
                    url = `${api}/checkout/api/order-detail`;
                    options = {
                        method: "POST",
                        body: JSON.stringify(objItem),
                        headers: { "Content-Type": "application/json" },
                    };
                    fetch(url, options)
                        .then((response) => response.json())
                        .then((data) => {
                            console.log(data);
                        });
                });
            };
        </script>
    </body>
</html>
